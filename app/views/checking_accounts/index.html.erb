<p id="notice"><%= notice %></p>

<h1>Listing Checking Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last4</th>
      <th>Status</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checking_accounts.each do |checking_account| %>
      <tr>
        <td><%= checking_account.name %></td>
        <td><%= checking_account.last4 %></td>
        <td><%= checking_account.status %></td>
        <td><%= checking_account.balance %></td>
        <td><%= link_to 'Show', checking_account %></td>
        <td><%= link_to 'Edit', edit_checking_account_path(checking_account) %></td>
        <td><%= link_to 'Destroy', checking_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

