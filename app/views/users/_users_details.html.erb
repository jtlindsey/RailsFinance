  <div class="col-md-12">
    <div class="panel panel-danger">
      <div class="panel-heading">Administration</div>
      <div class="panel-body" >

        <div class="row visible-sm-block visible-md-block visible-lg-block">
          <div class="col-md-12">
            <div class="panel panel-primary">
              <div class="panel-heading panels-text">
              </div>
              <div class="panel-body">
                <table id="transactions" class="transactions-for-checking table table-striped table-hover table-condensed">
                  <thead>
                    <tr>
                      <th>User ID</th>
                      <th>Email</th>
                      <th>Name</th>
                      <th>Created at</th>
                      <th>Sign in count</th>
                      <th>Current sign in ip</th> <!-- is deposit -->
                      <th>Last sign in ip</th>
                      <th>Admin</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @users.each do |user| %>
                      <tr>
                        <td><%= user.id %></td>
                        <td><%= user.email %></td>
                        <td><%= user.name %></td>
                        <td><%= user.created_at.to_date %></td>
                        <td><%= user.sign_in_count %></td>
                        <td><%= user.current_sign_in_ip %></td>
                        <td><%= user.last_sign_in_ip %></td>
                        <td><%= user.admin %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div> 

        <!-- Mobile -->
        <div class="row visible-xs-block">
          <div class="col-md-12">

            <div class="panel-primary">
              <% @users.each do |user| %>
                <table class="table table-striped">
                <tbody>
                  <tr style="background: black"><td></td><td><%= "" %></td></tr>
                  <tr><td>User ID</td><td><%= user.id %></td></tr>
                  <tr><td>Email</td><td><%= user.email %></td></tr>
                  <tr><td>Name</td><td><%= user.name %></td></tr>
                  <tr><td>Created at</td><td><%= "#{user.created_at.to_date}" %></td></tr>
                  <tr><td>Sign in count</td><td><%= user.sign_in_count %></td></tr>
                  <tr><td>Current sign in ip</td><td><%= user.current_sign_in_ip %></td></tr>
                  <tr><td>Last sign in ip</td><td><%= user.last_sign_in_ip %></td></tr>
                  <tr><td>Admin</td><td><%= user.admin %></td></tr>
                </tbody>
                </table>
              <% end %>
            </div>

          </div>
        </div>
        <!-- End Mobile -->

      </div>
    </div>
  </div>


<script>
// for dataTables
$(document).ready(function() {
  var custom_table = $('#transactions').dataTable();
  // sort a column descending (at position 0 in the array (base 0)
  custom_table.fnSort( [ [0,'desc'] ] );
} );
</script>