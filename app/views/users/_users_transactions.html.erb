  <div class="col-md-12">
    <div class="panel panel-danger">
      <div class="panel-heading">User Details</div>
      <div class="panel-body" >

        <div class="row visible-sm-block visible-md-block visible-lg-block">
          <div class="col-md-12">
            <table id="transactions" class="transactions-for-checking table table-striped table-hover table-condensed">
              <thead>
                <tr>
                  <th>Created at</th>
                  <th>User ID</th>
                  <th>Transaction Type</th>
                  <th>ID</th>
                  <th>Category</th>
                  <th>Transfer ref</th>
                  <th>Account ID</th>
                  <th>Amount</th>
                </tr>
              </thead>

              <tbody>
                <% @users_transactions.each do |transaction| %>
                  <tr>
                    <td><%= transaction.created_at %></td>
                    <td><%= transaction.account.user_id %></td>
                    <td><%= transaction.transaction_type %></td>
                    <td><%= transaction.id %></td>
                    <td><%= transaction.category %></td>
                    <td><%= transaction.transfer_ref %></td>
                    <td><%= transaction.account_id %></td>
                    <td><%= number_to_currency(transaction.amount) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div> 

        <!-- Mobile -->
        <div class="row visible-xs-block">
          <div class="col-md-12">

            <div class="panel-primary">
              <% @users_transactions.each do |transaction| %>
                <table class="table table-striped">
                <tbody>
                  <tr style="background: black"><td></td><td><%= "" %></td></tr>
                  <tr><td>Created at</td><td><%= transaction.created_at %></td></tr>
                  <tr><td>User ID</td><td><%= transaction.account.user_id %></td></tr>
                  <tr><td>Transaction Type</td><td><%= transaction.transaction_type %></td></tr>
                  <tr><td>ID</td><td><%= transaction.id %></td></tr>
                  <tr><td>Category</td><td><%= transaction.category %></td></tr>
                  <tr><td>Transfer ref</td><td><%= transaction.transfer_ref %></td></tr>
                  <tr><td>Account ID</td><td><%= transaction.account_id %></td></tr>
                  <tr><td>Amount</td><td><%= number_to_currency(transaction.amount) %></td></tr>
                </tbody>
                </table>
              <% end %>
            </div>

          </div>
        </div>
        <!-- End Mobile -->

      </div>
    </div>
  </div>


<script>
// for dataTables
$(document).ready(function() {
  var custom_table = $('#transactions').dataTable();
  // sort a column descending (at position 0 in the array (base 0)
  custom_table.fnSort( [ [0,'desc'] ] );
} );
</script>