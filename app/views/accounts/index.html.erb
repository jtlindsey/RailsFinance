<div class="row">
  <div class="col-md-6">
    <div class="panel panel-primary fixed-panel-height">
      <div class="panel-heading">Favorite Accounts</div>
      <div class="panel-body">

        <table class="table table-striped table-hover scroll">
          <thead>
            <tr>
              <th>Name</th>
              <th>Status</th>
              <th>Balance</th>
            </tr>
          </thead>

          <tbody>
            <% @favorite_accounts.each do |account| %>
              <tr>
                <td><%= link_to "#{account.name} #{account.last4}", account_transactions_path(account_id: account.id) %><%= " (#{account.type})" %></td>
                <td><%= account.status %></td>
                <td><%= number_to_currency(account.balance) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>




