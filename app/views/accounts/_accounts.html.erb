  <% if accounts.size > 0 %>
    <div class="col-md-4">
      <div class="panel panel-primary panel-accounts">
        <div class="panel-heading">
          <h3 class="panel-title"><%= "#{pluralize(accounts.size, account_name)} " %><%= link_to "(all)", list_accounts_path %></h3>
        </div>
        <div class="panel-body">
          <table class="table table-striped">
            <tbody>
              <% accounts.each do |account| %>
                <% if account.status == 'Open' %>
                  <tr>
                    <td><%= link_to "#{account.name} #{account.last4}", account_transactions_path(account_id: account.id) %></td>
                    <td><%= "#{number_to_currency(account.balance)}" %></td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>