<h4 style="text-align: center;"> Financial Summary for <%= current_user.name %></h4>
<h6 style="text-align: center;">Current as of: <%= DateTime.now.strftime("%d-%b-%Y %l:%M%P") %></h6>


<div class="row">
<div class="col-md-12">
    <div class="panel panel-primary">
      <div class="panel-heading">Net Worth <%= number_to_currency(Account.user_networth(current_user)) %></div>
      <div class="panel-body fixed-panel-height">

        <%#= column_chart networth_data, colors: ["green", "#FF0000"], library: {tooltip: {trigger: 'none'}, pointSize: 0, vAxis:  {format: "currency"}, backgroundColor: "#FFF", height: 265} %>

        <%= column_chart networth_data, colors: ["green", "#FF0000"], library: {pointSize: 0, vAxis:  {format: "currency"}, backgroundColor: "#FFF", height: 265} %>

      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="panel panel-primary panel-accounts">
      <div class="panel-heading">All Assets</div>
      <div class="panel-body">

        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Status</th>
              <th>Balance</th>
            </tr>
          </thead>

          <tbody>
            <%# @assets_list.each do |account| %>
              <tr>
                <td><%#= link_to "#{account.name} #{account.last4}", account_transactions_path(account_id: account.id) %><%#= " (#{account.type})" %></td>
                <td><%#= account.status %></td>
                <td><%#= number_to_currency(account.balance) %></td>
              </tr>
            <%# end %>
          </tbody>
        </table>

      </div>
      <div class="panel-footer clearfix">
        <div class="pull-right">
          <Strong>Subtotal Assets <%#= number_to_currency(@assets_total) %></Strong>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">All Liabilities</div>
      <div class="panel-body">

        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Status</th>
              <th>Balance</th>
            </tr>
          </thead>

          <tbody>
            <%# @liabilities_list.each do |account| %>
              <tr>
                <td><%#= link_to "#{account.name} #{account.last4}", account_transactions_path(account_id: account.id) %><%#= " (#{account.type})" %></td>
                <td><%#= account.status %></td>
                <td><%#= number_to_currency(account.balance) %></td>
              </tr>
            <%# end %>
          </tbody>
        </table>

      </div>
      <div class="panel-footer clearfix">
        <div class="pull-right">
          <Strong>Subtotal Liabilities <%#= number_to_currency(@liabilities_total) %></Strong>
        </div>
      </div>
    </div>
  </div>
</div>

<br>

