<%= form_for(@transaction, 
             as: :transaction,
             url: 
             @transaction.id ? account_transaction_path(@account, @transaction) : account_transactions_path) do |f| %>
  <% if @transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
      <% @transaction.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.hidden_field :transaction_type, :value =>'Payment' %>
    <%= f.hidden_field :from_account_id, :value => @account.id %>

    <%= f.hidden_field :interest_payment, value: number_to_currency(0) %>
    <%= f.hidden_field :principal_payment, value: number_to_currency(0) %>
    <%= f.hidden_field :amount, value: number_to_currency(0) %>
    <%#= f.hidden_field :payment_amount, value: number_to_currency(0) %>

<!--   <div class="field">
    <%#= f.label :payment_amount %><br>
    <%#= f.text_field :payment_amount, value: number_to_currency(@transaction.account.minimum_payment + @transaction.account.minimum_escrow_payment) %>
  </div>  -->   

  <div class="field">
    <%= f.label :value, 'Payment To:' %><br>
    <%= f.collection_select :to_account_id, @liability_account_payment_list, :id, :account_details, {include_blank: 'Please Select'} %>    
  </div>
  <div class="field">
    <%= f.label :payment_amount %><br>
    <%= f.text_field :payment_amount, value: number_to_currency(0) %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <%= f.select :category, Transaction.payment_category_list, {include_blank: 'Please Select'} %>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :date, :order => [:day, :month, :year], :include_seconds => true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
