

  <%= f.hidden_field :transaction_type, :value =>'Payment' %>
  <%= f.hidden_field :amount, value: number_to_currency(0) %>
  <%= f.hidden_field :payee, value: @transaction.account.name %>

  <%= f.hidden_field :payment_amount, value: number_to_currency(@transaction.account.minimum_payment + @transaction.account.minimum_escrow_payment) %>

  <div class="field">
    <%= f.label "Minimum Payment" %><br>
    <%= number_to_currency(@transaction.account.minimum_payment + @transaction.account.minimum_escrow_payment) || 0 %>
  </div>
  <div class="field">
    <%= f.label :interest_payment, "Additional Interest Payment" %><br>
    <%= f.text_field :interest_payment, value: number_to_currency(0) %>
  </div>
  <div class="field">
    <%= f.label :principal_payment, "Additional Principal Payment" %><br>
    <%= f.text_field :principal_payment, value: number_to_currency(0) %>
  </div>
  <div class="field">
    <%= f.label "Additional Escrow Payment" %><br>
    <%#= f.text_field :payment_amount, value: number_to_currency(0) %>
    <%#= f.text_field :payment_amount, value: number_to_currency(@transaction.account.minimum_payment + @transaction.account.minimum_escrow_payment) %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <%= f.select :category, Transaction.payment_category_list, {include_blank: 'Please Select'} %>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :date, :order => [:day, :month, :year], :include_seconds => true %>
  </div>
  <div class="actions"><br>
    <%= f.submit %>
  </div>
