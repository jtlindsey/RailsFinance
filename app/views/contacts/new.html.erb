
<div class="jumbotron">
  <div class="container">
    <div class="page-header">
        <h1 class="text-center">Contact</h1>
        <div class="text-center">
          <p>
              Complete the form below for any questions you have.<br> We typically respond within 24 to 48 hours. Thank you for your patience.<br>
          </p>
        </div>
        <div class="well well-sm entete"></div>
    </div>       
        
    <!-- Contact Section -->
    <section id="contact">
        <div class="container">
            <div class="row">

            </div>
            <div class="row">
                <div class="col-lg-12">

                  <div style="max-width: 420px; padding: 10px 15px 30px 15px; margin: 0 auto;">

                    <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>

                    <% if @contact.errors.any? %>
                      <div id="error_explanation">
                        <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this message from being sent:</h2>

                        <ul>
                        <% @contact.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                        </ul>
                      </div>
                    <% end %>

                      <div class="form-group">
                        <%= f.label :name, "Name" %>
                        <%= f.text_field :name, :required => true, :autofocus => true, placeholder: "Your Name *", class: 'form-control' %>
                      </div>
                      <div class="form-group">
                        <%= f.label :email, "Email" %>
                        <%= f.text_field :email, :required => true, placeholder: "Email *", class: 'form-control' %>
                      </div>
                      <div class="form-group">
                        <%= f.label :subject, "Subject" %>
                        <%= f.text_field :subject, :required => true, placeholder: "Subject *", class: 'form-control' %>
                      </div>
                      <div class="form-group">
                        <%= f.label :message, "Message" %>
                        <%= f.text_area :message, :as => :text, :required => true, placeholder: "Message *", class: 'form-control' %>
                      </div>
                      <div class= "hidden">
                        <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
                      </div>
                      <div style="text-align: right">
                        <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
                      </div>
                    <% end %>

                  </div>

                </div>
            </div>
        </div>
    </section>
    
  </div>
</div>